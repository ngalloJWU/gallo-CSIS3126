<% layout('/partials/boilerplate')%>
<div class="w-100">
    <img src="NicksList.png" style="max-width: 100%;">
</div>
<div class='container mt-3'>
    <div class="row">
        <%for(let product of products){%>
            <div class="col-2 homeProduct">
                <a href="/products/<%=product._id%>/show">
                    <div class="d-flex flex-column justify-content-center align-items-center mb-3">
                        <img class ="align-self-center productImg" src="<%=product.images[0].url%>">
                        <div class="d-flex flex-column justify-content-center align-items-center">
                            <p style="font-size: 18px"><b><%=product.productTitle%></b></p>
                            <p style="font-size: 20px;">$<%=product.productPrice%></p>
                        </div>
                    </div>
                </a>
            </div>
        <%}%>
    </div>
</div>