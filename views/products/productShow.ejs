<% layout('/partials/boilerplate')%>
<div class="d-flex mt-5">
    <div>
        <img src="/<%=product.image%>">
    </div>
    <div class="d-flex flex-column m-3">
        <h1><%=product.productTitle%></h1>
        <h2><%=product.productPrice%></h2>
        <p><%=product.productDescription%></p>
        <div class="d-flex w-100">
            <button type="button" class="btn btn-outline-success w-50 m-2">Interested</button>
            <button type="button" class="btn btn-outline-secondary w-50 m-2">Save</button>
        </div>
        <a href='/products/<%=product._id%>/edit'><button type="button" class="w-100 btn btn-outline-secondary w-50 m-2">Edit</button></a>
        <form method='POST' action='/products/<%=product._id%>?_method=DELETE'><button type="button"class="w-100 btn btn-outline-secondary w-50 m-2">Delete</button></form>
    </div>
</div>